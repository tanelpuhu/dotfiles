#!/bin/bash
? () {
  echo "$*" | bc -l;
} # $ ? 1337 - 1295   => 42

blame(){
  svn blame $@ | less -X
}

svnlog(){
  svn log -vl 50 $@ | less -X
}

svndi(){
  svn di $@ | colordiff | less -RX
}

changset(){
  svn log --diff -vr $@ | colordiff | less -RX
}

lint(){
  pylint $@ | less -X
}

ttail(){
  tail -f $@ | while read; do echo -e "$(date +%T.%N) $REPLY"; done
}

mktar() {
  tar cvf  "${1%%/}.tar" "${1%%/}/";
}

mktgz() {
  tar cvzf "${1%%/}.tgz" "${1%%/}/";
}
